journal = {IEEE Trans. Med. Imaging},
keywords = {Inverse problems,Iterative reconstruction,Non-Cartesian magnetic resonance imaging (MRI),Radial sampling,Turbo spin-echo},
month = {nov},
number = {11},
pages = {1759--1769},
pmid = {19502124},
title = {{Model-Based Iterative Reconstruction for Radial Fast Spin-Echo MRI}},
