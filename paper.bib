arxivId = {0911.3456},
author = {Kl{\"{o}}ckner, Andreas and Pinto, Nicolas and Lee, Yunsup and Catanzaro, Bryan and Ivanov, Paul and Fasih, Ahmed},
doi = {10.1016/j.parco.2011.09.001},
